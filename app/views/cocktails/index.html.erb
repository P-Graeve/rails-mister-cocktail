
<div class="navbar">
  <p></p>
</div>

<div class="banner">
  <h1>Mix your Cocktail</h1>
</div>

<div class="container">

  <div class="cards row ">
    <%@cocktails.each do |cocktail| %>
    <div class="col-3">
      <div class="card">
        <%=cl_image_tag(cocktail.photo.key, width: 400, height: 300, crop: :fill) if cocktail.photo.attached? %>

        <div class="card-title">
         <%=  link_to cocktail.name,  cocktail_path(cocktail), class: "cocktail-name" %>
       </div>
     </div>
   </div>
   <% end %>
 </div>

 <div class="btn btn-primary home page">
  <%= link_to "Create your own Cocktail",  new_cocktail_path, class: "text-white" %>
</div>


</div>


